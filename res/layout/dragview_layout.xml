<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f8e3"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#4ea7b8"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/llScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/btnL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;"
                android:textColor="#4ea7b8"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textSize="20dp" />

            <com.lxr.activity.HorizontalListView
                android:id="@+id/hlvFloor"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="8"
                android:layout_gravity="center"
                android:background="#f1f333" >
            </com.lxr.activity.HorizontalListView>
<!-- f1f8e3 -->
            <TextView
                android:id="@+id/btnR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
                android:layout_weight="1"
                android:textColor="#4ea7b8"
                 android:layout_margin="5dp"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llContent" >

        <Button
            android:id="@+id/btnDrager"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:background="#4ea7b8"
            android:text="Button"
            android:textSize="10dp" />
    </RelativeLayout>

</RelativeLayout>